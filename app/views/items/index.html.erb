<h1> Item </h1>
<table>
  <thead>
    <tr>
        <td><b>Name</b></td>
        <td><b>Price</b></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><a href="/items/<%= item.id %>">Show</a></td>
        <td><a href="/items/<%= item.id %>/edit">Edit</a></td>
        <td><%= button_to 'Delete', item, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="/items/new">New Item</a>